<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="BookArena project is a simple library manager based on single page application technology. It is built with asp.net mvc, angular.js and entity framework." />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <title>BookArena - Library Manager</title>

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="BookaArena" />
    <meta property="og:url" content="http://bookarena.shibbir.net/" />
    <meta property="og:title" content="BookArena: Single Page Application" />
    <meta property="og:image" content="" />
    <meta property="og:description" content="BookArena project is a simple library manager based on single page application technology. It is built with asp.net mvc, angular.js and entity framework." />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="bookArenaApp">
    <div ng-controller="RootCtrl">
        <div data-cd-navigation></div>
        <div class="row" id="wrapper">
            <div class="small-3 large-3 columns">
                <div data-cd-side-navigation></div>
            </div>
            <div class="small-9 large-9 columns" style="background-color: #2C3E50;">
                <div class="body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="row" style="background: none repeat scroll 0 0 #178892;">
            <div class="small-12 large-12 columns">
                <footer class="credit">BookArena: A simple SPA based library manager. Copyright &copy; 2014 <a href="http://shibbir.net/" target="blank">Shibbir Ahmed</a>. All rights reserved.</footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
</body>
</html>